{
  "manifest_version": 3,
  "name": "Twitch Auto Clicker",
  "version": "1.0",
  "description": "Reclama autom√°ticamente los puntos de canal de Twitch.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.twitch.tv/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  }
}